@model PizzApp.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover Categoria</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index">Retornar</a>
    </form>
</div>
