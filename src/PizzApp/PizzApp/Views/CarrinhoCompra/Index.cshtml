@model CarrinhoCompraViewModel

<div class="Container">
    <div class="row checkoutForm">
        <div>
        <img src="~/imagens/Full-Cart-icon.png" width="30" height="35"/> <h4>Seu carrinho de compras</h4>
        </div>

            

                <table class="table table-bordered table-striped">

                    <thead>
                        <tr>
                            <th>Quantidade</th>
                            <th>Pizza</th>
                            <th class="text-right">Preço</th>
                            <th class="text-right">Subtotal</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                    @foreach(var item in Model.CarrinhoCompra.CarrinhoCompraItens)
                    {
                        <tr>
                            <td class="text-center">@item.Quantidade</td>
                            <td class="text-left">@item.Pizza.PizzaName</td>
                            <td class="text-right">@item.Pizza.Preco.ToString("c")</td>

                            <td class="text-right">
                                @((item.Quantidade * item.Pizza.Preco).ToString("c"))
                            </td>

                            <td class="text-center">
                            <a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra" asp-route-pizzaId="@item.Pizza.PizzaId"><img src="~/imagens/delete.png" width="20px" height="20px" />
                            </a>
                            </td>

                        </tr>
                    }
                </tbody>
                 <tfoot>
                     <tr>
                         <td colspan="3" class="text-right">Total</td>
                         <td class="text-right">
                             @Model.CarrinhoCompraTotal.ToString("c")
                         </td>
                     </tr>
                 </tfoot>

                </table>

                <div class="text-right">
                    <div class="btn-group">
                    @if (Model.CarrinhoCompra.CarrinhoCompraItens.Count>0) {
                    <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
                    }
                    &nbsp;&nbsp;&nbsp;
                    <a class="btn btn-primary" asp-controller="Pizza" asp-action="List">Continuar Comprando</a>
                    </div>
                </div>
               <br />

            
    </div>
</div>